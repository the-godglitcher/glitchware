-- FUNCTION TO SHOW TABS WHEN PANEL OPENS
local function showTabs()
	-- INFO TAB
	infoTab.Visible = true
	local tabTweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
	local sizeTween = tweenService:Create(infoTab, tabTweenInfo, {Size = UDim2.new(1, -20, 0, 40)})
	local textTween = tweenService:Create(infoTab, tabTweenInfo, {TextTransparency = 0})
	sizeTween:Play()
	textTween:Play()

	-- HACKS TAB
	hacksTab.Visible = true
	local hacksTweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
	local hacksSizeTween = tweenService:Create(hacksTab, hacksTweenInfo, {Size = UDim2.new(1, -20, 0, 40)})
	local hacksTextTween = tweenService:Create(hacksTab, hacksTweenInfo, {TextTransparency = 0})
	hacksSizeTween:Play()
	hacksTextTween:Play()
end

