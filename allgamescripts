local tweenInfoPanel = TweenInfo.new(0.4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local open = false
local activeTweens = {}

-- Typing coroutine
local typingTask
local function typeText(targetText, delayTime)
	if typingTask then
		task.cancel(typingTask)
	end
	typingTask = task.spawn(function()
		label.Text = ""
		for i = 1, #targetText do
			label.Text = string.sub(targetText, 1, i)
			task.wait(delayTime)
		end
	end)
end

-- OPEN PANEL
local function openPanel()
	open = true
	local tween = tweenService:Create(panel, tweenInfoPanel, {Position = UDim2.new(0, 0, 0, 0)})
	tween:Play()
	table.insert(activeTweens, tween)
	
	typeText("Welcome, " .. player.Name .. "!", 0.05)
	task.delay(3, function()
		typeText("Voidware", 0.05)
	end)
	
	task.delay(0.3, function()
		showTabs()
	end)
end

-- CLOSE PANEL
local function closePanel()
	open = false
	local tween = tweenService:Create(panel, tweenInfoPanel, {Position = UDim2.new(0, -200, 0, 0)})
	tween:Play()
	table.insert(activeTweens, tween)
end

-- BUTTON CLICK EVENTS
button.MouseButton1Click:Connect(function()
	if not open then
		openPanel()
	else
		closePanel()
	end
end)

closeButton.MouseButton1Click:Connect(function()
	if open then
		closePanel()
	end
end)

-- CTRL + U KEYBIND (animation removed)
userInputService.InputBegan:Connect(function(input, gameProcessed)
	if gameProcessed then return end
	if input.KeyCode == Enum.KeyCode.U and userInputService:IsKeyDown(Enum.KeyCode.LeftControl) then
		-- cancel any active tweens
		for _, tween in ipairs(activeTweens) do tween:Cancel() end
		activeTweens = {}

		-- remove shutdown animation: destroy GUI immediately
		screenGui:Destroy()
		open = false
	end
end)




