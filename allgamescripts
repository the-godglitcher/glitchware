local userInputService = game:GetService("UserInputService")
local tweenService = game:GetService("TweenService")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SidePanelGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

-- MENU BUTTON
local button = Instance.new("TextButton")
button.Name = "SideButton"
button.Parent = screenGui
button.AnchorPoint = Vector2.new(0, 0)
button.Position = UDim2.new(0, 20, 0, -70)
button.Size = UDim2.new(0, 120, 0, 50)
button.BackgroundColor3 = Color3.fromRGB(50, 0, 100)
button.Text = "Menu"
button.TextColor3 = Color3.fromRGB(200, 120, 255)
button.Font = Enum.Font.Code
button.TextSize = 22
button.BorderSizePixel = 0
button.AutoButtonColor = false

local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0.3, 0)
buttonCorner.Parent = button

local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(120, 0, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(80, 0, 200))
}
gradient.Rotation = 45
gradient.Parent = button

local buttonStroke = Instance.new("UIStroke")
buttonStroke.Color = Color3.fromRGB(200, 120, 255)
buttonStroke.Thickness = 2
buttonStroke.Parent = button

local hoverTweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
local normalTween = tweenService:Create(button, hoverTweenInfo, {Size = UDim2.new(0, 120, 0, 50)})
local hoverTween = tweenService:Create(button, hoverTweenInfo, {Size = UDim2.new(0, 135, 0, 57)})

button.MouseEnter:Connect(function()
	buttonStroke.Color = Color3.fromRGB(255, 0, 255)
	hoverTween:Play()
end)
button.MouseLeave:Connect(function()
	buttonStroke.Color = Color3.fromRGB(200, 120, 255)
	normalTween:Play()
end)

local slideTween = tweenService:Create(button, TweenInfo.new(0.8, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
	{Position = UDim2.new(0, 20, 0, 70)})
slideTween:Play()

